generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String @id
  email   String @unique
  lastLoggedId DateTime?
  orders  ExistingTrades[]

}

model ExistingTrades {
  id     String @id

  openPrice   Float
  closePrice  Float
  leverage    Float
  pnl         Float


  asset        Asset @relation(fields: [assetId], references: [id]) 
  assetId     String
  liquidated Boolean
  user   User   @relation(fields: [userId], references: [id])
  userId String
  createdAt DateTime? @default(now())
}

model Asset{
  id String @id
  symbol String 
  imageUrl String 
  name String
  decimals Int 

  existingTrades ExistingTrades[]
}